
@{
    ViewData["Title"] = "Search";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Search</h2>

<table id="peopleTable" class="table table-hover"></table>

@section scripts
    {
    <script type="text/javascript">
        $(document).ready(function () {
            $('#peopleTable').DataTable({
                serverSide: true,
                searchDelay: 1000,
                searchHeaders: true,
                ajax: {
                    url: '/dt/people',
                    dataSrc: 'data',
                    type: 'POST'
                },
                columns: [
                    {
                        data: 'personId',
                        title: 'Person ID'
                    },
                    {
                        data: 'fullName',
                        title: 'Full Name'
                    },
                    {
                        data: 'logonName',
                        title: 'Logon Name'
                    },
                    {
                        data: 'emailAddress',
                        title: 'Email'
                    }
                ]
            });
        });
    </script>
}